{
  "name": "veritone-docs",
  "description": "Veritone Docs",
  "version": "1.0.0",
  "main": "n/a",
  "scripts": {
    "build": "sh ./schemagen.sh && rm -rf build-${ENVIRONMENT:-local} && mkdir build-${ENVIRONMENT:-local} && cp -r src/docs/* build-${ENVIRONMENT:-local}/ && node build.js",
    "build:webpack": "sh ./schemagen.sh && webpack",
    "lint": "./node_modules/.bin/markdownlint --ignore \"src/docs/apis/search-quickstart/README.md\" --ignore \"src/docs/developer/engines/toolkit/*\" --ignore \"src/docs/apis/reference/\" --ignore \"src/docs/apis/job-quick-start-guide/\" --ignore \"src/docs/apis/search-quick-start-guide/\" src/docs",
    "start": "yarn build && ./node_modules/.bin/docsify serve ./docs",
    "start:webpack": "yarn build:webpack && ./node_modules/.bin/docsify serve ./build-${ENVIRONMENT:-local}",
    "serve": "./node_modules/.bin/docsify serve ./build-${ENVIRONMENT:-local}",
    "test": "echo \"tests temporarily disabled\" && true  # ./node_modules/.bin/codeceptjs run --reporter mocha-multi",
    "test:full": "yarn && yarn build:webpack && HTTP_PORT=3333 yarn test",
    "test:only": "E2E_SKIP_BOOTSTRAP=true yarn test",
    "test:report": "E2E_GENERATE_REPORT=true yarn test:full; ./node_modules/.bin/allure serve test/e2e/output"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test:full"
    }
  },
  "devDependencies": {
    "allure-commandline": "^2.9.0",
    "codeceptjs": "^2.0.7",
    "docsify": "^4.6.7",
    "docsify-cli": "^4.2.0",
    "get-graphql-schema": "^2.1.1",
    "husky": "^1.3.1",
    "markdownlint-cli": "^0.14.0",
    "mocha-junit-reporter": "^1.18.0",
    "mocha-multi": "^1.0.1",
    "puppeteer": "^1.13.0",
    "webpack-cli": "^3.3.6",
    "yarn": "^1.15.2"
  },
  "dependencies": {
    "clean-webpack-plugin": "1.0.1",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "^3.1.0",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.12.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.36.1"
  }
}
